<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/Left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".70"
            android:orientation="vertical"
            android:text="left">

            <TextView
                android:id="@+id/firstnameString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="firstname:"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/editprofile_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="name" />

            <TextView
                android:id="@+id/LastNameString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lastname:"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/editprofile_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="lastname" />

            <TextView
                android:id="@+id/emailString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email:"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/editprofile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="email" />

            <TextView
                android:id="@+id/usernameString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username:"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/editprofile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="username" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="right">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="93dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/sym_def_app_icon" />
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>